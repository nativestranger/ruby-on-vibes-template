<div class="max-w-sm sm:max-w-md md:max-w-lg lg:max-w-xl mx-auto">
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Log in</h1>
    <p class="mt-2 text-sm text-gray-600">Welcome back to Ruby on Vibes</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-5 md:space-y-6") do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email,
          autofocus: true, 
          autocomplete: "email",
          class: "w-full px-3 py-2 md:px-4 md:py-2.5 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm md:text-base",
          placeholder: "Enter your email" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password,
          autocomplete: "current-password",
          class: "w-full px-3 py-2 md:px-4 md:py-2.5 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm md:text-base",
          placeholder: "Enter your password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2 py-1">
        <%= f.check_box :remember_me, 
            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="mt-2 md:mt-3">
      <%= f.submit "Log in", 
          class: "w-full py-2 md:py-2.5 px-4 bg-blue-600 hover:bg-blue-700 text-white text-sm md:text-base font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
